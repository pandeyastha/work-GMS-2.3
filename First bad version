// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    int firstBadVersion(int n) {
        int low=1;
        int high=n;
        int ans;
        while(low<=high){
            int mid= low+(high-low)/2;
            if( isBadVersion(mid)==1){
                ans=mid;
                high=mid-1;
            }
            else if(isBadVersion(mid)==0)low=mid+1;
        }
        return ans;
    }
};
